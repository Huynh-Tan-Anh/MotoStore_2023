    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 250px;
        margin-bottom: 20px;
    }

    .abc p {
        padding-top: 20px;
    }
</style>

